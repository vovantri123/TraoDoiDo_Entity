    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:TraoDoiDo"
    StartupUri="Views/Windows/DangNhap.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <LinearGradientBrush x:Key="GridBackgroundBrush" StartPoint="1,0" EndPoint="0,1">
                <GradientStop Offset="0" Color="#FFC13BE2" />
