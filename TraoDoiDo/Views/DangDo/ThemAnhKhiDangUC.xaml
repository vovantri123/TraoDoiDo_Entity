<UserControl
    x:Class="TraoDoiDo.ThemAnhKhiDangUC"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:TraoDoiDo"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Width="650"
    Height="230"
    HorizontalAlignment="Left"
    VerticalAlignment="Top"
    Background="{DynamicResource MaterialDesignPaper}"
    FontFamily="{DynamicResource MaterialDesignFont}"
    TextElement.FontSize="13"
    TextElement.FontWeight="Regular"
    TextElement.Foreground="{DynamicResource MaterialDesignBody}"
    TextOptions.TextFormattingMode="Ideal"
    TextOptions.TextRenderingMode="Auto"
    mc:Ignorable="d">
    <Grid Margin="10,10,10,0">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="180" />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <!--  2 cái textBlock dưới đây dùng làm biến tạm thôi  -->
        <TextBlock
            x:Name="txtbDuongDanAnh"
            Foreground="Transparent"
            Text="" />
        <TextBlock
            x:Name="txtbTenFileAnh"
            Foreground="Transparent"
            Text="" />


        <!--    -->

        <Border
            Grid.Column="0"
            Margin="2"
            BorderBrush="Black"
            BorderThickness="1">

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                <Grid Grid.Row="0">

                    <Image x:Name="imgAnhSP" Source="/HinhCuaToi/no_image.jpg" />
                </Grid>
                <Grid Grid.Row="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition />
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>
                    <Button
                        x:Name="btnChonAnh"
                        Grid.Column="0"
                        Margin="10"
                        Click="btnChonAnh_Click">
                        <materialDesign:PackIcon Kind="FileImagePlusOutline" />
                    </Button>
                    <Button
                        x:Name="btnXoaAnh"
                        Grid.Column="1"
                        Margin="10"
                        Click="btnXoaAnh_Click">
                        <materialDesign:PackIcon x:Name="btnHuyAnh" Kind="TrashCanOutline" />
                    </Button>
                </Grid>
            </Grid>
        </Border>
        <Grid Grid.Column="1">
            <TextBox
                x:Name="txtbMoTa"
                Grid.Row="0"
                Margin="10,0,0,0"
                materialDesign:HintAssist.Hint="Chú thích"
                materialDesign:TextFieldAssist.HasClearButton="True"
                AcceptsReturn="True"
                Style="{StaticResource MaterialDesignOutlinedTextBox}"
                TextWrapping="Wrap"
                VerticalScrollBarVisibility="Auto" />
        </Grid>
    </Grid>

</UserControl>
